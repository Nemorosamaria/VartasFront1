@model IEnumerable<VartasBackend1.Models.Tuote>

@{
    ViewBag.Title = "Products";
}
<div id="header">
   
        <h2>Products</h2>
</div>

<div class="large-12 medium-12 columns">
    
    <div id="filterRow">
        @using (Html.BeginForm())
        {
            <div class="row" id="filter">

                    @Html.TextBox("SearchString")

                    <input type="submit" class="button small" value="Filter by name" />

            </div>
        }
    </div>

    <!-- shows content of the model Tuote -->
    <div class="table">
        <table class="hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductKey)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsStorageProduct)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPrSaldoPositive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Saldo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Edited)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Editor)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductKey)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsStorageProduct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrSaldoPositive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edited)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Editor)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.TuoteId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TuoteId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TuoteId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>